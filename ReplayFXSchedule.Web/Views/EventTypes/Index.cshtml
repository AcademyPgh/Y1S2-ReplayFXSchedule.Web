@model IEnumerable<ReplayFXSchedule.Web.Models.EventType>

@{
    ViewBag.Title = "Manage Event Types";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Event Types</h4>
    </div>
    <div class="card-body">

        <p>
            @Html.ActionLink("Create New", "Create", "EventTypes", null, new { @class = "btn btn-default replayButton" })
        </p>
        <table class="table replayTable">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>