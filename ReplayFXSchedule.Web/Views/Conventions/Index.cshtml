@model IEnumerable<ReplayFXSchedule.Web.Models.Convention>

@{
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Manage Conventions</h4>
    </div>
    <div class="card-body">
        @if (ViewBag.isAdmin)
        {
            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
            </p>
        }
        <table class="table table-shopping">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Zip)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hashtag)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnableInApp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Url)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hashtag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnableInApp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id, convention_id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id, convention_id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id, convention_id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>